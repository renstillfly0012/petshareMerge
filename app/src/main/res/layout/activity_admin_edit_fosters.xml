<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".AdminEditFosters">

    <ImageView
        android:id="@+id/popup_admin_edit_foster_image"
        android:layout_width="146dp"
        android:layout_height="164dp"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.047"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/popup_admin_edit_foster_fname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/rectangle_2"
        android:ems="10"
        android:gravity="center|center_horizontal"
        android:hint="Juan Dela Cruz"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popup_admin_edit_foster_image" />

    <EditText
        android:id="@+id/popup_admin_edit_foster_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:background="@drawable/rectangle_2"
        android:ems="10"
        android:gravity="center|center_horizontal"
        android:hint="JuanDelaCruz@gmail.com"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/popup_admin_edit_foster_fname"
        app:layout_constraintStart_toStartOf="@+id/pop_fname"
        app:layout_constraintTop_toBottomOf="@+id/popup_admin_edit_foster_fname" />

    <EditText
        android:id="@+id/popup_admin_edit_foster_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:background="@drawable/rectangle_2"
        android:ems="10"
        android:gravity="center|center_horizontal"
        android:hint="**********"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/popup_admin_edit_foster_email"
        app:layout_constraintStart_toStartOf="@+id/pop_email"
        app:layout_constraintTop_toBottomOf="@+id/popup_admin_edit_foster_email" />

    <EditText
        android:id="@+id/popup_admin_edit_foster_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:background="@drawable/rectangle_2"
        android:ems="10"
        android:gravity="center|center_horizontal"
        android:hint="**********"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/popup_admin_edit_foster_password"
        app:layout_constraintStart_toStartOf="@+id/popup_admin_edit_foster_password"
        app:layout_constraintTop_toBottomOf="@+id/popup_admin_edit_foster_password" />

    <Button
        android:id="@+id/popup_admin_edit_foster_btnSubmit"
        android:layout_width="101dp"
        android:layout_height="58dp"
        android:layout_marginEnd="95dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/cancel1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/popup_admin_edit_foster_btnCancel"
        app:layout_constraintTop_toBottomOf="@+id/popup_admin_edit_foster_confirm" />

    <Button
        android:id="@+id/popup_admin_edit_foster_btnCancel"
        android:layout_width="101dp"
        android:layout_height="58dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/login1"
        app:layout_constraintEnd_toStartOf="@+id/popup_admin_edit_foster_btnSubmit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popup_admin_edit_foster_confirm" />

    <TextView
        android:id="@+id/popup_admin_edit_foster_textname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="78dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="70dp"
        android:text="Name here"
        android:textColor="@color/colorBlack"
        app:layout_constraintBottom_toTopOf="@+id/popup_admin_edit_foster_textemail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/popup_admin_edit_foster_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/popup_admin_edit_foster_textemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Email here"
        android:textColor="@color/colorBlack"
        app:layout_constraintBottom_toTopOf="@+id/popup_admin_edit_foster_textrole"
        app:layout_constraintStart_toEndOf="@+id/popup_admin_edit_foster_image"
        app:layout_constraintTop_toBottomOf="@+id/popup_admin_edit_foster_textname" />

    <TextView
        android:id="@+id/popup_admin_edit_foster_textrole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="24dp"
        android:text="Role here"
        app:layout_constraintBottom_toTopOf="@+id/popup_admin_edit_foster_textstatus"
        app:layout_constraintStart_toEndOf="@+id/popup_admin_edit_foster_image"
        app:layout_constraintTop_toBottomOf="@+id/popup_admin_edit_foster_textemail" />

    <TextView
        android:id="@+id/popup_admin_edit_foster_textstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Status here"
        app:layout_constraintStart_toEndOf="@+id/popup_admin_edit_foster_image"
        app:layout_constraintTop_toBottomOf="@+id/popup_admin_edit_foster_textrole" />


</androidx.constraintlayout.widget.ConstraintLayout>

